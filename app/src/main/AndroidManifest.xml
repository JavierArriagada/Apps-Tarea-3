<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.curso.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pegs"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pegs_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity4"
            android:parentActivityName=".MainActivity2">
            <intent-filter>
                <action android:name="com.curso.myapplication.MainActivity4" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:parentActivityName=".MainActivity2">
            <intent-filter>
                <action android:name="com.curso.myapplication.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>